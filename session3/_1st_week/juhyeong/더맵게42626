import java.util.*;

class Solution {
    public int solution(int[] scoville, int K) {        
        PriorityQueue<Integer> pq = new PriorityQueue<>();
        for (int i : scoville) {
            pq.add(i);
        }
        
        int answer = 0;
        while (pq.size() > 1 && pq.peek() < K) {
            pq.add(pq.poll() + (pq.poll() * 2));
            answer++;
        }
        
        return pq.peek() < K ? -1 : answer;
    }
}
